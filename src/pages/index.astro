---
import '@/styles/global.css';
import { App } from '@/components/App';

// Configuration from environment
const config = {
  csvUrl: import.meta.env.CSV_URL,
  currencySymbol: import.meta.env.CURRENCY_SYMBOL,
  currencyPosition: import.meta.env.CURRENCY_POSITION as 'before' | 'after',
  showDots: import.meta.env.SHOW_DOTS === 'true',
  showBigMenu: import.meta.env.SHOW_BIG_MENU === 'true',
};
---

<!DOCTYPE html>
<html lang="fr" class="dark">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>Faucon - Carte de Boissons</title>
    <meta name="description" content="Menu des boissons" />
  </head>
  <body class="bg-gray-950 text-gray-100 min-h-screen">
    <App
      client:load
      csvUrl={config.csvUrl}
      currencySymbol={config.currencySymbol}
      currencyPosition={config.currencyPosition}
      showDots={config.showDots}
      showBigMenu={config.showBigMenu}
    />
  </body>
</html>
